<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SignalREJ1MAUI.Views.MainPage">

    <ScrollView>
        <VerticalStackLayout
            Padding="30,0"
            Spacing="25">
            <ListView x:Name="mensajes">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <HorizontalStackLayout>
                                <Label Text="{Binding NombreUsuario}" ></Label>
                                <Label Text="{Binding MsgUsuario}"></Label>
                            </HorizontalStackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
            <Entry
                x:Name="myUsername"
                Placeholder="Introduce tu nombre de usuario"
                FontSize="18"
                HorizontalOptions="Center"></Entry>
            <Entry
                x:Name="myChatMessage"
                Placeholder="Introduce tu mensaje"
                FontSize="18"
                HorizontalOptions="Center"></Entry>
            <Button
                x:Name="sendButton"
                Text="Enviar"
                Clicked="sendButton_Clicked"
                HorizontalOptions="Center"></Button>
        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
